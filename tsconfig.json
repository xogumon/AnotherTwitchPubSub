{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./src/@types",
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "src/@types/**/*", "src/utils/**/*"],
  "include": ["src/**/*.ts"]
}
