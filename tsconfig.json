{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./@types",
    "outDir": "./build",
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "@types/**/*"],
  "include": ["src/**/*.ts"]
}
